<%-include ('../partials/header.ejs')%>

    <h2>
        Edit Bandana?
    </h2>
    <div class="editContainer">
    <form action="/novascloset/bandanas/<%=bandana._id%>?_method=PUT" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%=bandana.title%>"><br>
    
        <label for="img">Image Url: </label>
        <input type="text" name="img" value="<%=bandana.img%>"><br>
    
        <label for="description">Description: </label>
        <input type="text" name="description" value="<%=bandana.description%>"><br>
    
        <label for="price">Price: </label>
        <input type="number" name="price" value="<%=bandana.price%>"><br>
    
        <label for="qty">Quantity: </label>
        <input type="number" name="qty" value="<%=bandana.qty%>"><br>
    
        <input type="submit" value=" Edit Bandana" class="submitBtns">
    </form>
</div>

<%-include ('../partials/footer.ejs')%>